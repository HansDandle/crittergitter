{
  "name": "siteshield-web",
  "version": "1.0.0",
  "description": "Lead generation and referral platform for wildlife exclusion services",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "dev": "next dev",
    "build": "pnpm type-check && next build",
    "type-check": "tsc --noEmit",
    "lint:fix": "eslint app lib components --ext .ts,.tsx --fix",
    "start": "next start",
    "lint": "eslint app lib components --ext .ts,.tsx",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "pre-commit": "pnpm type-check"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.29.0",
    "next": "^16.1.3",
    "pg": "^8.11.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.8",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^16.1.3",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "typescript": "5.9.3",
    "vitest": "^1.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "tsc --noEmit"
    ]
  }
}
